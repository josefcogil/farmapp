<div style="height: 90vh;" class="container p-5">
    <h3 class="text-center text-uppercase mb-5">Informacion del recipe</h3>

    <div class="row">
        {{#each recipes}}
        <div class="col-md-6">
            <h5 class="text-secondary text-uppercase mb-4">Paciente</h5>
            <h6 class="text-uppercase">{{this.paciente}}</h6>
        </div>
        <div class="col-md-6">
            <h5 class="text-secondary text-uppercase mb-4">Medico</h5>
            <h6 class="text-uppercase">{{this.medico}}, <span class="text-secondary">{{this.especialidad}}</span></h6>
        </div>
        {{/each}}
    </div>


    <h5 class="text-center text-secondary text-uppercase mb-4 mt-5">Medicamentos</h5>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th scope="col">Nombre</th>
                <th scope="col">Medicamento</th>
                <th scope="col">Presentacion</th>
                <th scope="col">mg</th>
            </tr>
        </thead>
        <tbody>
            {{#each medicamentos}}
            <tr onclick="verInfo({{this.id}})">
                <th class="text-uppercase">{{this.nombre}}</th>
                <td class="text-uppercase">{{this.farmaco}}</td>
                <td class="text-uppercase">{{this.presentacion}}</td>
                <td>{{this.mg}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>

    <div class="text-center">
        <a class="text-secondary" href="/recipes/consulta/farmacias">Volver</a>
    </div>
</div>

<script>
    const verInfo = id => window.location.href = url + '/medicamentos/ver/farmacias/' + id
</script>